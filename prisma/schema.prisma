// schema.prisma
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Bojen {
  id  String   @default(cuid()) @id
  ts_key String
}

model marker_geschichte {
  id            Int @id @default(autoincrement())
  name          String
  latitude      Float
  longitude     Float
  excerpt String?
  url String
  createdAt     DateTime  @default(now()) @map(name: "created_at")
}

model marker_aktuelles {
  id            Int @id @default(autoincrement())
  name          String
  latitude      Float
  longitude     Float
  excerpt String?
  url String
  createdAt     DateTime  @default(now()) @map(name: "created_at")
}

model marker_visionen {
  id            Int @id @default(autoincrement())
  name          String
  latitude      Float
  longitude     Float
  excerpt String?
  url String
  createdAt     DateTime  @default(now()) @map(name: "created_at")
}

model geschichte {
  id            Int @id @default(autoincrement())
  name          String
  pic_url       String
  subheading1   String?
  subheading2   String?
  text          String
  quellen       String?
  createdAt     DateTime  @default(now()) @map(name: "created_at")
}

model aktuelles {
  id            Int @id @default(autoincrement())
  name          String
  pic_url       String
  subheading1   String?
  subheading2   String?
  text          String
  quellen       String?
  createdAt     DateTime  @default(now()) @map(name: "created_at")
}

model visionen {
  id            Int @id @default(autoincrement())
  name          String
  pic_url       String
  subheading1   String?
  subheading2   String?
  text          String
  quellen       String?
  createdAt     DateTime  @default(now()) @map(name: "created_at")
}
